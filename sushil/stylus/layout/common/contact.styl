.{$pre_global}-{$contact}{

	&__{
    	&container{
			background-color: rgba(0, 0, 0, 0.8);
		    font-size: 16px;
            padding: 60px 0;
            position: relative;
		}
        &map{
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            z-index: 111;
        }
    	&title{
    		font-size: 21px;
    		font-family: $font_family_light;
    		text-transform: uppercase;
    		margin-bottom: 30px;
    	}
        &box{
            background-color: $color_white;
            box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.1), -2px -2px 3px rgba(0, 0, 0, 0.1);
            max-width: 680px;
            margin-left: auto;
            display: flex;
            position: relative;
            z-index: 222;
        }
        &way{
            background-color: $color_muted;
            color: $color_white;
            box-shadow: 2px 2px 3px rgba(0, 0, 0, 0.1), -2px -2px 3px rgba(0, 0, 0, 0.1);
            margin: 30px 0 30px -30px;
            padding: 30px;
        }
        &form{
            padding: 60px;
            flex: 1;
        }
    	&field{
    		& ~ &{
    			margin-top: 21px;
    		}
    	}
    	&control{
    		border-width: 0;
    		border-bottom: 1px solid #ddd;
    		height: 42px;
    		line-height: @height - 1;
    		padding: 0 21px 0 3px;
    		background-color: transparent;
    		width: 100%;
    		color: $color_black;
    		transition: border-color .2s;

    		textarea&{
    			height: auto;
    			line-height: 1.5;
    			min-height: 90px;
    		}
    		&:focus{
    			border-color: $color_black;
    		}
    	}
    	&error{
    		color: #f74747;
    	}
    	&button{
    		display: inline-block;
    		width: 100%;
    		background-color: $color_muted;
    		border-width: 0;
    		height: 42px;
    		line-height: @height;
    		color: $color_white;
    		padding: 0 30px;
    		font-size: 18px;
    		font-family: $font_family_light;
    		text-transform: uppercase;
    		transition: background-color .3s;
    		letter-spacing: 3px;

    		&:hover,
    		&:focus{
    			background-color: $color_primary;
    		}
    	}
	}
}
.so{
    &-{
        &brand{
            &__{
                &address,
                &phone,
                &mail{
                    position: relative;
                    margin-bottom: 21px;
                    padding-left: 30px;

                    [class^="icon-"]{
                        position: absolute;
                        top: 0;
                        left: 0;
                        font-size: 18px;
                    }
                }
                &social{
                    margin-top: 60px;

                    & a{
                        color: currentColor!important;
                        font-size: 18px;
                    }
                }
            }
        }
    }
}