.{$pre_global}-{$banner}{

	&__{
		&container{
			padding: 60px 0;
			color: $color_white;
			background-color: #01242f;
			background-repeat: no-repeat;
			background-position: top center;
			background-size: cover;
			min-height: 510px;
			position: relative;
			display: flex;
			justify-content: center;
			text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
			background-image: url(../../product/banner/preview.jpg);
			// font-family: $font_family_serif;

			+mq(gt-md){
				padding: 150px 0;
			}
			&:after{
				content: "";
				position: absolute;
				top: 0;
				right: 0;
				bottom: 0;
				left: 0;
				background-color: rgba(#000,.1);
				z-index: 90;
			}
		}
		&box{
			max-width: 240px;
		    padding: 30px;
		    border: 3px solid $color_primary;
		    min-height: 240px;
		    position: relative;
		    z-index: 190;

			+mq(gt-sm){
				//max-width: 270px;
			    white-space: nowrap;
			    //padding: 30px;
			    //min-height: 270px;
			}
		}		
		&label{
			color: $color_primary;
			font-size: 16px;
			margin-bottom: 21px;
		}
		&main{
			position: relative;
			z-index: 190;
			display: flex;
			white-space: nowrap;
		}
		&key{
			flex: 1;
		    text-align: right;
		    padding-right: 42px;
		    margin-top: 15px;
		}
		&list{

		}
		&item{
			padding: 12px 24px;
			position: relative;
			font-size: 18px;
			letter-spacing: 3px;
			text-transform: uppercase;
			font-family: $font_family_light;

			&:after{
				content: "";
				box(15px,18px);
				// border-radius: 50%;
				border: 2px solid $color_primary;
				position: absolute;
				right: 0;
				top: 0;
				bottom: 0;
				margin: auto 0;
			}
		}
		&content{
			flex: 2;
		}
		&title,
		&heading{
			font-size: 55px;
			line-height: 1.2;
		   	font-family: $font_family_light;
		   	letter-spacing: 6px;
		   	margin: 0;
			// letter-spacing: 12px;
		 //    font-family: $font_family_bold;
		 //    text-transform: uppercase;
		 //    font-weight: 700;
		 //    text-shadow: 1px 2px 3px rgba(0, 0, 0, 0.5);
		}
		&title{
		    +mq(gt-md){
		    	font-size: 75px;
		    }
		}
		&button{
			display: inline-block;
		    height: 42px;
		    line-height: 38px;
		    margin-top: 30px;
		    color: $color_primary;
		    border: 2px solid $color_primary;
		    padding: 0 30px;
		    font-size: 18px;
		    letter-spacing: 1.5px;
		    transition: .3s;

		    +mq(gt-md){
		    	height: 60px;
		    	line-height: 56px;
		    }
		    &:hover{
		    	background-color: $color_primary;
		    	color: #fff;
		    }
		}
	}
}