.{$pre_global}-{$header}{
	padding: 6px 24px;
	font-size: 13px;

	+mq(gt-md){
		padding: 12px 30px;
	}

	&__{
		&container{
			display: flex;
			align-items: center;
		}
		&brand{

		}
		&fluid{
			flex: 1;
		}
		&logo{
			font-size: 0;
		    margin-right: 21px;
		    display: inline-block;
		}
		&nav{

		}
		&contact{
			font-size: 21px;
			color: $color_muted;
			display: flex;

			a{
				color: currentColor;
				transition: color .2s;
			}
		}
		&quote{
			font-size: 12px;
		    text-transform: uppercase;
		    background-color: $color_primary;
		    color: #fff !important;
		    height: 30px;
		    line-height: 30px;
		    padding: 0 12px;
		    margin-right: 27px;
		    display: inline-block;
		    border-radius: 1px;
		}
		&fb{
			&:hover{
				color: #3b5998;
			}
		}
		&twit{
			&:hover{
				color: #1da1f2;
			}
		}
		&gp{
			&:hover{
				color: #dd4b39;
			}
		}
		&pin{
			&:hover{
				color: #bd081c;
			}
		}
		&phone{
			&:hover{
				color: #0ac578;
			}
		}
		&mail{
			&:hover{
				color: #14acf2;
			}
		}
	}
}