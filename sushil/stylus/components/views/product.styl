.{$pre_global}-{$product}{
	&s{

		&__{
			&container{
				padding-left: 60px;
			}
			&row{
				display: flex;
				flex-wrap: wrap;
				justify-content: space-between;
			}
			&col{
				width: 100%;
				margin-bottom: 30px;				

				+mq(gt-md){
					width: (96%/2);					
				}
				+mq(gt-lg){
					width: (94%/3);
				}
			}
		}
	}
	&{
		height: 100%;
		position: relative;
		color: $color_white!important;
		display: flex;
		align-items: flex-end;
		height: 330px;
		overflow: hidden;

		&:after{
			content: "";
			position absolute;
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;
			z-index: 80;
			background-color: rgba(#000,.01);
			transition: background-color .2s;
		}
		+mq(gt-md){
			height: 390px;
		}
	}
	&__{
		&image{
			position: absolute;
			top: 0;
			right: 0;
			left: 0;
			bottom: 0;
			background-position: top center;
			background-repeat: no-repeat;
			background-size: cover;
			transition: .2s;
		}
		&content{
			position: relative;
			z-index: 180;
			padding: 21px;
			max-width: 300px;
			// visibility: hidden;
			// opacity: 0;
		}
		&title{
			text-transform: uppercase;
            font-size: 16px;
            margin: 0;
            letter-spacing: 3px;
            font-weight: bold;

            &:after{
                content: "";
                box(21px, 1px);
                background: $color_white;
                margin: 6px 0 12px;
                display: block;
            }
		}
		&fx{
		    transform: translateY(100%);
			position: absolute;
			transition: .2s;
		}
		&desc{
			letter-spacing: 1px;
			font-family: $font_family_light;
			// font-size: 0;
			// opacity: 0;
			// visibility: hidden;
			// transition: .2s font-size, .4s opacity;
		}
		&btn{
			border: 1px solid $color_primary;
		    height: 30px;
		    line-height: 28px;
		    padding: 0 12px;
		    display: inline-block;
		    margin-top: 21px;
		    color: $color_primary;
		    text-transform: uppercase;
		    font-size: 12px;
			// opacity: 0;
			// visibility: hidden;
			// transition: .2s font-size, .4s opacity;
		}
	}
	&:hover{

		&:after{
			background-color: rgba(#000,.5);
		}
		& ^[0]__{
			&image{
				transform: scale(1.1);
			}
			&fx{
				position: relative;
				transform: translateY(0);
			}
			// &desc,
			// &btn{
			// 	font-size: 12px;
			// 	opacity: 1;
			// 	visibility: visible;
			// }
		}
	}
}