.{$pre_global}-{$tile}{

	&s{

		&__{
			&row{
				display: flex;
			}
			&col{
				flex: 1;
				display: flex;
    			flex-direction: column;
			}
		}
	}
	&{
		height: 100%;
		position: relative;
		min-height: 270px;
		color: $color_white!important;
		display: flex;
		align-items: flex-end;
		overflow: hidden;		

		&:after{
			content: "";
			position absolute;
			top: 0;
			right: 0;
			bottom: 0;
			left: 0;
			z-index: 80;
			background-color: rgba(#000,.01);
			transition: background-color .2s;
		}
	}
	&__{
		&image{
			position: absolute;
			top: 0;
			right: 0;
			left: 0;
			bottom: 0;
			background-position: top center;
			background-repeat: no-repeat;
			background-size: cover;
			transition: .2s;
		}
		&content{
			position: relative;
			z-index: 180;
			padding: 21px;
			max-width: 300px;
			// visibility: hidden;
			// opacity: 0;
		}
		&title{
			text-transform: uppercase;
            font-size: 16px;
            margin: 0;
            letter-spacing: 3px;
            font-weight: bold;

            &:after{
                content: "";
                box(21px, 1px);
                background: $color_white;
                margin: 6px 0 12px;
                display: block;
            }
		}
		&desc{
			letter-spacing: 1px;
			font-family: $font_family_light;
		}
	}
	&:hover{

		&:after{
			background-color: rgba(#000,.5);
		}
		& ^[0]__image{
			transform: scale(1.1);
		}
		// & ^[0]__content{
		// 	visibility: visible;
		// 	opacity: 1;
		// }
	}
}