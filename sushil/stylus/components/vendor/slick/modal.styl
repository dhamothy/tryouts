.slick{

	&-{
		&modal{

			& ^[0]{
				&-{
					&slider{

					}
					&arrow{
						background-color: transparent;
						color: $color_muted;
						border: 1px solid;
						box(45px);
						line-height: 41px;
						text-align: center;
						font-size: 0;
						position: fixed;
						top: 30px;
						z-index: 290;

						&:hover{
							background-color: $color_white;
							color: $color_muted;
						}

						+mq(sm){
							display: none!important;
						}
					}
					&prev{
						right: 150px;

						&:after{
							content: "\2190";
			    			font-size: 21px;
						}
					}
					&next{
						right: 90px;

						&:after{
							content: "\2192";
							font-size: 21px;
						}
					}
					&disabled{
						opacity: .35;
						cursor: not-allowed;
					}
					&slide{
						&:not(^[0]-current){
							& ^[0]-modal-product{
								pointer-events: none;
							}
						}
					}
				}
			}
			&-product{
				height: 100%;

				& ^[0]{
					&-{
						&list,
						&track,
						&slide{
							height: 100%;
							overflow: hidden;
						}
						&list{
							z-index: 99;
						}
						&arrow{
							background-color: transparent;
							border: 1px solid #fff;
							box(30px);
							line-height: 27px;
							text-align: center;
							color: #fff;
							position: absolute;
							bottom: 42px;
							top: auto!important;
							z-index: 290;
							font-size: 0;
							visibility: hidden;
							opacity: 0;
							transition: .2s;

							&:hover{
								background-color: $color_white;
								color: $color_muted;
							}
						}
						&prev{
							left: -1px;

							&:after{
								content: "\2190";
				    			font-size: 16px;
							}
						}
						&next{
							right: -1px;

							&:after{
								content: "\2192";
								font-size: 16px;
							}
						}
						&disabled{
							opacity: 0;
							visibility: hidden;
							cursor: not-allowed;
						}
						&dots{
							position: absolute;
							bottom: 42px;
							left: 42px;
							right: 42px;
							z-index: 1900!important;
							text-align: center;
							visibility: hidden;
							opacity: 0;
							transition: .2s;

							li{
								display: inline-block;
								margin: 0 6px;
							}

							button{
								box(30px);
								font-size: 12px;
								line-height: 19px;
								text-align: center;
								border: 1px solid $color_white;
								background-color: transparent;
								color: $color_white;
							}
							^[0]-active button{
								background-color: $color_muted!important;
								color: $color_white!important;
							}
						}
					}
				}

				&:hover{
					& ^[0]{
						&-{
							&arrow,
							&dots{
								visibility: visible;
								opacity: 1;
								display: inline-block!important;  //1
							}
						}
					}
				}
			}
			// &-nav{

			// 	& ^[0]{
			// 		&-{

			// 			&slide{
			// 				width: 40px;
			// 				height :40px;
			// 				background-color: red;
			// 			}
			// 		}
			// 	}
			// }
		}
	}
}