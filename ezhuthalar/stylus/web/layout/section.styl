	font-size: 16px;

	&__{
		&container{
			max-width: 750px;
			margin: auto;
		}
		&tag{
			&s{
				position: absolute;
				top: 30px;
				display: flex;
				flex-wrap: wrap;
				margin-left: -30px;
				text-transform: uppercase;
				font-weight: 200;
				font-size: 13px;
				color: #a7a7a7;
			}
			&{
				margin-top: 15px;
				padding-left: 30px;
			}
		}
		&title{
			font-size: 48px;
			line-height: 60px;
			font-weight: 300;
		}
	}
	&--{
		&banner{
			background-color: #333;
			color: #fff;
			padding: 120px 0;
			position: relative;

			a{
				color: currentColor!important;
			}
		}
